<?xml version="1.0" encoding="utf-8"?>
<!-- Class 填写对应类名 -->
<Body xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    Class="WeaponDevelopment.UserInterfaces.EnhancementUI"
    Enabled="false" Left="25#" Top="50#" Width="300px" FitHeight="true" BorderRadius="12"
    Padding="8" CrossContentAlignment="Stretch" CrossAlignment="Stretch" Gap="8"
    FlexDirection="Column">

    <!-- 通用样式 Style -->
    <Style Name="TextInfo"
        Padding="8 4 8 4" FitWidth="false" FitHeight="false" Height="30px"
        Text="???" TextScale="0.75" TextAlign="0 0.5" BorderRadius="4"
        BackgroundColor="rgba(0,0,0,0.25)" />

    <ScrollView Name="Test" FitHeight="true" BackgroundColor="rgba(0,0,0,0.25)">
        <M.Mask Height="100px" />
        <M.Container FlexDirection="Column" CrossContentAlignment="Center" CrossAlignment="Center">
            <Style Name="TestText" TextScale="0.75" BackgroundColor="rgba(0,0,0,0.25)" />
            <TextView Text="套套 1" Style="TestText" />
            <TextView Text="套套 2" Style="TestText" />
            <TextView Text="套套 3" Style="TestText" />
            <TextView Text="套套 4" Style="TestText" />
            <TextView Text="套套 5" Style="TestText" />
            <TextView Text="套套 6" Style="TestText" />
        </M.Container>
    </ScrollView>

    <!-- Title -->
    <TextView Name="Title" Text="装备强化" TextScale="0.75" TextAlign="0.5" />
    <ElementGroup FitWidth="true" FitHeight="true" Gap="4" CrossAlignment="Start">
        <!-- 装备槽 -->
        <EquipmentSlot Name="WeaponSlot" Width="48px" Height="48px" BorderRadius="8" />
        <!-- 描述 -->
        <ElementGroup FlexGrow="1" CrossContentAlignment="Stretch" CrossAlignment="Stretch"
            FitWidth="true" FitHeight="true" FlexDirection="Column" Gap="4">
            <!-- 装备名称 -->
            <TextView Name="WeaponName" Style="TextInfo" />
            <!-- 等级 -->
            <WD-ProgressBar Name="ProgressLevel" Width="100%" FitHeight="true" BorderRadius="4">
                <TextView Name="WeaponLevel" Style="TextInfo" Width="100%" />
            </WD-ProgressBar>
            <!-- 经验 -->
            <WD-ProgressBar Name="ProgressExp" Width="100%" FitHeight="true" BorderRadius="4">
                <TextView Name="WeaponExp" Style="TextInfo" Width="100%" />
            </WD-ProgressBar>
        </ElementGroup>
    </ElementGroup>
    <TextView Text="强化材料" TextScale="0.75" TextAlign="0.5" />
    <!-- 强化材料容器 -->
    <ElementGroup Name="MaterialContainer" Gap="4" FitHeight="true" MainAlignment="SpaceBetween"></ElementGroup>
    <ElementGroup Width="100%" FitHeight="true" FlexDirection="Row" Gap="8">
        <TextView Name="ToTop" FitWidth="false" Width="1px" FlexGrow="1" Padding="4"
            BorderRadius="8" Border="2" BorderColor="rgba(0,0,0,0.5)"
            BackgroundColor="rgba(0,0,0,0.25)" Text="强化至上限" TextScale="0.85" TextAlign="0.5" />
        <TextView Name="ToOne" FitWidth="false" Width="1px" FlexGrow="1" Padding="4"
            BorderRadius="8" Border="2" BorderColor="rgba(0,0,0,0.5)"
            BackgroundColor="rgba(0,0,0,0.25)" Text="强化一级" TextScale="0.85" TextAlign="0.5" />
    </ElementGroup>
</Body>